extends layout

block content

  form(method='POST' action='/register')
    div
      label(for='name') #{__('First Name')}:
      input#name.form-control(type='text', name='name')
    div
      label(for='last_name') #{__('Last Name')}:
      input#last_name.form-control(type='text', name='last_name')
    div
      label(for='email') #{__('Email')}:
      input#email.form-control(type='email', placeholder='name@email.com' name='email')
    div
      label(for='favoriteBook') #{__('Nick name')}:
      input#favoriteBook.form-control(type='text', name='nick_name')
    div
      label(for='pw') #{__('Password')}:
      input#pw.form-control(type='password' name='password')
    div
      p= message

    button.btn.btn-primary(type='submit') #{__('Sign up')}
