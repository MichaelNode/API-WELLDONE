extends ../layout

block content
    form(method='POST', data-toggle="validator")
        .container
            legend #{__('Forgot Password')}
            .container
            if messages.error
                .alert.alert-danger
                    div= messages.error
            if messages.info
                .alert.alert-info
                    div= messages.info
            if messages.success
                .alert.alert-success
                    div= messages.success
            .form-group
            label(for='email') Email
            input.form-control(type='email', name='email', autofocus, required)
            br
            button.btn.btn-primary(type='submit') #{__('Reset Password')} 
    
   
