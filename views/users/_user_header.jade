mixin user_header(user, following)
    - const image = user.image || 'default.png'
    .row
        .col-12.d-flex.align-items-center.flex-md-nowrap.flex-wrap
            .user-header-image.mr-3.mb-3.mb-lg-0
                img(src="/images/#{image}")
            .user-header-info
                h1=user.name
                p.mb-1=user.description
                .row.align-items-center.m-percent
                    .col-6
                        p.text-muted.small.d-inline.mr-2=`${user.followers.length} ${__('followers')}`
                        p.text-muted.small.d-inline=`${following.length} ${__('following')}`
                    - const linkOrder = `/articles/user/${user.nick_name}?`
                    .col-6.text-right
                        include ../articles/_order
    hr.mt-0.mb-5.m-percent
